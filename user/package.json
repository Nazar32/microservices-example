{
  "name": "nestjs-rest-boilerplate",
  "version": "1.0.0",
  "main": "dist/main.js",
  "license": "UNLICENSED",
  "private": true,
  "engines": {
    "node": ">=14.11.0"
  },
  "scripts": {
    "format": "prettier --write \"src/**/*.ts\"",
    "clean": "rimraf ./dist",
    "start:production": "node dist/main.js",
    "start:dev": "nodemon .",
    "build": "npm run clean && tsc",
    "lint": "eslint  -c .eslintrc.json --ext .ts 'src'",
    "gen:compodoc": "compodoc -p tsconfig.json",
    "gen:typedoc": "typedoc src/main.ts"
  },
  "dependencies": {
    "@nestjs/common": "^7.4.4",
    "@nestjs/core": "^7.4.4",
    "@nestjs/platform-express": "^7.4.4",
    "@nestjs/swagger": "^4.6.1",
    "body-parser": "^1.19.0",
    "class-transformer": "^0.3.1",
    "class-validator": "^0.12.2",
    "express": "^4.17.1",
    "nestjs-easyconfig": "^2.0.8",
    "nestjs-pino": "^1.2.0",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^6.6.3",
    "swagger-ui-express": "^4.1.4"
  },
  "devDependencies": {
    "@compodoc/compodoc": "^1.1.11",
    "@types/body-parser": "^1.19.0",
    "@types/express": "^4.17.8",
    "@types/node": "^14.11.10",
    "eslint": "^7.11.0",
    "husky": "^4.3.0",
    "lint-staged": "^10.4.2",
    "nodemon": "^2.0.5",
    "pino-pretty": "^4.3.0",
    "prettier": "^2.1.2",
    "rimraf": "^3.0.2",
    "ts-node": "^9.0.0",
    "typedoc": "^0.19.2",
    "typescript": "^4.0.3",
		"@typescript-eslint/eslint-plugin": "^4.2.0",
		"@typescript-eslint/eslint-plugin-tslint": "^4.2.0",
		"@typescript-eslint/parser": "^4.2.0",
		"eslint-plugin-import": "^2.22.1",
		"eslint-plugin-jsdoc": "^30.6.0",
		"eslint-plugin-prefer-arrow": "^1.2.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.ts": [
      "npm run format",
      "npm run lint"
    ]
  }
}
